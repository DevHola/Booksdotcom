{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,  // Set to true if you have JS files to include
    "outDir": "dist",  // Change this to 'dist' to match deployment folder
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "express"]  // Keep this if using node/express types
  }
}
